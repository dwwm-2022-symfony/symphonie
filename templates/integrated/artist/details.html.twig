{% extends 'base.html.twig' %}

{% block title %}Détails Artiste{% endblock %}

{% block main_class %}artist-details{% endblock %}

{% block main %}
<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center p-3">
            <i class="fa-solid fa-user"></i>
            <table>
                <thead>
                <tr>
                    <td colspan="2"><h2 class="artist-nickname">Nickname</h2></td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Nom :</td>
                    <td class="text-end">NOM Prénom</td>
                </tr>
                <tr>
                    <td>Prénom :</td>
                    <td class="text-end">1m32s</td>
                </tr>
                <tr>
                    <td>Sexe :</td>
                    <td class="text-end">Genre 1, Genre 2</td>
                </tr>
                <tr>
                    <td>Date de naissance :</td>
                    <td class="text-end">11/11/2022</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="#" class="btn outline-btn w-100">ÉDITER</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="#" class="btn solid-btn danger w-100">SUPPRIMER</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-12 col-md-6 p-3 h-100 overflow-auto">
            <div class="row">
                <div class="col-12">
                    <p class="artist-musics-title pb-3">Musiques réalisées :</p>
                </div>
                {% for i in 0..10 %}
                    <div class="col-12 pb-3">
                        <a href="#">Titre de la musique - Genre 1, Genre 2 - Sortie le : 11/11/2022</a>
                    </div>                    
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

