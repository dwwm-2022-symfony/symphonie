{% extends 'base.html.twig' %}

{% block title %}Nouvelle musique{% endblock %}

{% block main_class %}music-form{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <form class="col-12 col-md-6">
                <div class="row">
                    <div class="col-12">
                        <h2 class="page-title">Ajout d'une nouvelle musique</h2>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="title" class="form-label">Titre de la musique</label>
                        <input type="text" class="form-control" id="title">
                    </div>
                    <div class="col-12 mb-3">
                        <label for="author" class="form-label">Auteur</label>
                        <input type="text" class="form-control" id="author">
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label for="duration" class="form-label">Durée (en secondes)</label>
                        <input type="number" class="form-control" id="duration">
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                        <label for="releaseDate" class="form-label">Date de sortie</label>
                        <input type="date" class="form-control" id="releaseDate">
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label">Catégorie</label>
                        <div class="d-flex">
                            <div class="form-check me-3">
                                <input type="checkbox" class="form-check-input" id="categ1">
                                <label class="form-check-label" for="categ1">Genre 1</label>
                            </div>
                            <div class="form-check me-3">
                                <input type="checkbox" class="form-check-input" id="categ2">
                                <label class="form-check-label" for="categ2">Genre 2</label>
                            </div>
                            <div class="form-check me-3">
                                <input type="checkbox" class="form-check-input" id="categ3" checked>
                                <label class="form-check-label" for="categ3">Genre 3</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end pt-5">
                        <a href="#" class="btn outline-btn">AJOUTER</a>
                        <a href="#" class="btn solid-btn danger ms-3">ANNULER</a>
                    </div>
                </div>
            </form>
            <div class="col-6"></div>
        </div>
    </div>
{% endblock %}
